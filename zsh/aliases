# Utility aliases
alias ls="ls -GF"
alias ll="ls -lGF"
alias la="ls -aGF"
alias cask="brew cask"

# Postgres
alias pgstart="pg_ctl -D /usr/local/var/postgres start"
alias pgstop="pg_ctl -D /usr/local/var/postgres stop"

# R
alias r="R"
alias R="R --quiet"

# Ruby/Rails aliases
alias sc="script/console"
alias sdb="script/dbconsole"
alias ss="script/server"
#alias rc="rcov --rails test/unit/* test/functional/* && open coverage/index.html"
alias be="bundle exec"
alias rake="noglob rake"
alias log="open -a console log/development.log"

# git aliases
alias gc="git commit"
alias ga="git add"
alias gac="git commit -am"
alias gst="git status --ignore-submodules=dirty"
alias push="git push"
alias pull="git pull"
alias gb="git branch"
alias gco="git checkout"

# SVN aliases
alias co="svn co"
alias ci="svn ci"
alias sa="svn add"
alias st="svn status"
alias saddall="svn st | awk '/\?/ {print $2}' | xargs svn add"

# Project aliases
alias hugo59="/usr/local/bin/hugo-0.59.1/hugo"
